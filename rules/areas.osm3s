<?xml version="1.0" encoding="UTF-8"?>
<osm-script timeout="86400" element-limit="1073741824">

<union>
  <query type="relation">
    <has-kv k="admin_level"/>
    <has-kv k="name"/>
  </query>
  <query type="relation">
    <has-kv k="type" v="multipolygon"/>
    <has-kv k="name"/>
  </query>
  <query type="relation">
    <has-kv k="postal_code"/>
  </query>
  <query type="relation">
    <has-kv k="addr:postcode"/>
  </query>
</union>
<foreach into="pivot">
  <union>
    <recurse type="relation-way" from="pivot"/>
    <recurse type="way-node"/>
  </union>
  <make-area pivot="pivot"/>
</foreach>
<union>
  <query type="way">
    <has-kv k="area" v="yes"/>
    <has-kv k="name"/>
  </query>
  <query type="way">
    <has-kv k="building" v="yes"/>
    <has-kv k="name"/>
  </query>
  <query type="way">
    <has-kv k="natural"/>
    <has-kv k="name"/>
  </query>
  <query type="way">
    <has-kv k="leisure"/>
    <has-kv k="name"/>
  </query>
</union>
<foreach into="pivot">
  <union>
    <item set="pivot"/>
    <recurse type="way-node" from="pivot"/>
  </union>
  <make-area pivot="pivot"/>
</foreach>

</osm-script>
